# -- Database Configuration --
# Choose your database type: 'mysql' or 'sqlite'
DB_TYPE=sqlite

# -- MySQL Configuration (only required if DB_TYPE is 'mysql') --
DATABASEHOST=localhost
DATABASEUSER=root
DATABASEPASSWORD=
DATABASE=stremio_subtitle_translator

# -- SQLite Configuration (only required if DB_TYPE is 'sqlite') --
# Path to the SQLite database file. Defaults to './data/database.db' if not set.
SQLITE_PATH=./data/database.db

# -- Addon Server Configuration --
# The base URL of your addon. This should be the public-facing URL.
# Example: http://your-domain.com:3000
BASE_URL=http://127.0.0.1:3000

# The port the addon server will run on.
PORT=3000

# The address the addon server will bind to. '0.0.0.0' is recommended for Docker.
ADDRESS=0.0.0.0

# -- Publishing Configuration --
# Set to "TRUE" to publish this addon to the Stremio Central Store on startup.
# Requires the addon to be publicly accessible.
PUBLISH_IN_STREMIO_STORE=FALSE